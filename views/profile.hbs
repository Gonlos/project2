<div class="row">
    <div class="col-md-4 profile">
       <img src="{{user.image}}">
        <br><br>
        <h3>{{user.username}}</h3>
    </div>
    <div class="jumbotron col-sm-6">
        <h1 class="display-5">Chistes mÃ¡s recientes!</h1>
        {{#if jokes}}
        {{#each jokes}}
        <hr class="my-4">
        <a href="/profile/{{userId.id}}">{{userId.username}}</a>
        <p>{{body}}</p>
        <p>{{created_at}}</p>
            {{#if rates}}
                {{rateAvg}}
            {{else}}
                Sin puntuar
            {{/if}}
            {{#if isRated}}
            {{isRated}}
            {{else}}
                <form action="/rate/{{id}}" method="POST">
                <input type="number" name="rate" value="1" min="1" max="5">
                <button type="submit">Rate it</button>
                </form>
                
            {{/if}}
        {{/each}}
        {{else}}
        
        {{/if}}
    </div>
</div>